@page "/"
@if (IsLogin)
{
    <div class="sidebar">
        <NavMenu ActiveKey="Home">
            <Title>
                @Global.Instance.TextManager.GetText(Texts.Title)
            </Title>
            <ChildContent>
                <NavMenuItem Key="LoginPasswordManage" OnClick="@(() => Show<LoginPasswordManage>())">
                    <Tab>
                        <i class="fa fa-key" aria-hidden="true"></i>
                        @Global.Instance.TextManager.GetText(Texts.LoginPasswordManage)
                    </Tab>
                </NavMenuItem>
                <NavMenuItem Key="ProfileManage" OnClick="@(() => Show<ProfileManage>())">
                    <Tab>
                        <i class="fa fa-address-book" aria-hidden="true"></i>
                        @Global.Instance.TextManager.GetText(Texts.ProfileManage)
                    </Tab>
                </NavMenuItem>
            </ChildContent>
        </NavMenu>
    </div>
    <div class="main">
        <div class="content px-4">
            @Body
        </div>
    </div>
}
else
{
    @*
        登录窗口
    *@
    <Modal Visiable DialogBackdropVisiable DialogCentered>
     <TitleContent>
         <img src="favicon.ico" class="mr-2" width="30" height="30" />
         @Global.Instance.TextManager.GetText(Texts.Title)
     </TitleContent>
     <BodyContent>
         <div>
             <div class="form-group">
                 <div class="input-group">
                     <div class="input-group-prepend">
                         <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                     </div>
                     <input class="form-control @(string.IsNullOrEmpty(Message) ? "" : "is-invalid")"
                            placeholder="请输入密码" type="password" autocomplete="off"
                     @bind-value="Password" @bind-value:event="oninput"
                     @onkeypress="onPasswordKeyPress"
                            required autofocus />
                     @if (!string.IsNullOrEmpty(Message))
                        {
                            <div class="invalid-feedback">
                                @(Message)
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group">
                    <input type="button" class="btn btn-success btn-block" value="登录" @onclick="OnPost" />
                </div>
            </div>
        </BodyContent>
    </Modal>
}