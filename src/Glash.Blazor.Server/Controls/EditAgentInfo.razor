<div class="row">
    <div class="col-12">
        <EditForm Model="@Model" OnValidSubmit="Ok">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>@TextName</label>
                @if (IsAdd)
                {
                    <InputText class="form-control" @bind-Value="Model.Name" />
                }
                else
                {
                    <InputText class="form-control" @bind-Value="Model.Name" readonly />
                }
                <ValidationMessage For="@(() => Model.Name)" />
            </div>
            <div class="form-group">
                <label>@TextPassword</label>
                <InputText class="form-control" @bind-Value="Model.Password" />
                <ValidationMessage For="@(() => Model.Password)" />
            </div>
            <button type="submit" class="btn btn-primary col-sm-5 col-md-4 col-lg-2">@TextOk</button>
        </EditForm>
    </div>
</div>